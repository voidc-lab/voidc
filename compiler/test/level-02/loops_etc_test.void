{
    p: & *char := "Hello world!";

    printf("/-\\\n");

//  while(c: &char := *p++)  printf("[%c]\n", c);
//  while(c: &char = *p++)   printf("[%c]\n", c);
//  while(c: char = *p++)    printf("[%c]\n", c);
//  while(c = *p++)          printf("[%c]\n", c);

//  c: &char := undef;
//  while(c := *p++)         printf("[%c]\n", c);

    while(c = *p++)
    {
        if (c == '!')
        {
            printf(" ! \n");

            break;
        }

        if (c == ' ')
        {
            printf("   \n");

            continue;
        }

        printf("[%c]\n", c);
    }

    printf("\\-/\n");
}

